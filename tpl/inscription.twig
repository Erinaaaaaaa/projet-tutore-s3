{% extends "base.twig"%}

{% block css %}
{% endblock %}


{% block contenu %}

<form action="ValiderUpdate.php" method="POST" class="block">
    <fieldset>
        <legend>Inscription</legend>
        <fieldset>
            <table>
                <legend>Données personnelles</legend>
                <tr>
                    <th align = "left">id</th>
                </tr>
                <tr>
                    <td><input type="text" name="id" value="{{ id }}"></td>
                    <td><input type=hidden name="oldId" value="{{ id }}" > </td>
                </tr>
                <tr>
                    <th align = "left">nom</th>
                    <th align = "left">prenom</th>
                    <th align = "left">mot de passe</th>
                </tr>
                <tr>
                    <td><input type="text"     name="nom" value="{{ nom }}"></td>
                    <td><input type="text"     name="prenom" value="{{ prenom }}"></td>
                    <td><input type="password" name="mdp" ></td>
                </tr>
            </table>
        </fieldset>
        <fieldset>
            <legend>Attribution</legend>
            <table>

                <tr>
                    <th align = "left">roles</th>
                    <th align = "left">groupe</th>
                </tr>
                <tr>
                            <input type="radio" name="role" value="A" {%  if role == "A" %} checked {% endif %}>Administrateur<br>
                            <input type="radio" name="role" value="AE"{%  if role == "AE" %} checked {% endif %}>Administrateur/Enseignant<br>
                            <input type="radio" name="role" value="E" {%  if role == "E" %} checked {% endif %}>Enseignant<br>
                            <input type="radio" name="role" value="T" {%  if role == "T" %} checked {% endif %}>Tuteur<br>
                    </td>
                    <td><input type="text" name="groupe" value="{{ groupe }}"></td>
                </tr>
            </table>
        </fieldset>
        <fieldset>
            <table>
                <tr>
                    <th align = "left">crée le</th>
                    <th align = "left">mis à jour le</th>
                </tr>
                <tr>
                    <td><input type="date" name="crea" value="{{ cree_le }}" disabled></td>
                    <td><input type="date" name="maj" value="{{ maj_le }}" disabled></td>
                </tr>
            </table>
        </fieldset>
        <table>
            <tr>
                <td><input type="submit" name="ok" value="Valider"></td>
                <td><input type="reset" name="renit" value="Effacer"></td>
                <td>{{ErreurInscription}}</td>
            </tr>
        </table>
    </fieldset>
</form>
{% endblock %}