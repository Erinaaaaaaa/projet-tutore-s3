{% extends "base.twig"%}

{% block css %}
<style>
    table {border: solid 5px lightseagreen;
    border-collapse: collapse;
    font-size: medium;
    empty-cells: show;
    }

    th, td {padding-left: 8px;
    padding-right: 8px;
    padding-top: 2px;
    padding-bottom: 2px;
    border: solid 1px lightseagreen;}

    tr:nth-child(odd) {
        background-color: #FFC; /* jaune */
    }

    table img {
        height: 12px;
    }
</style>
{% endblock %}

{% block js %}
    <script>
        function verifSuppression(id) {
            if (confirm('Voulez-vous vraiment supprimer le groupe "' + id + '"?')) {
                alert("ok deleting " + id);
                document.location.href = "deleteGroupe.php?id=" + id;
            } else {
                alert("ok pas de souci l'ami");
            }
        }
    </script>
{% endblock %}

{% block contenu %}
<table>
    <tr>
        <th>groupe</th>
        <th>groupe Pere</th>
    </tr>


    {% for gp in tabGroupe %}
    <tr>
        <td>{{ gp.getGroupe() }}</td>
        <td>{{ gp.getGroupePere() }}</td>
       
        <td><a href="page_updateGroupe.php?id={{gp.getGroupe()}}"><img src="images/edit.png" alt="Modifier le groupe"/></a></td>
        <!-- deleteUtilisateur.php?id={{gp.getGroupe()}} -->
        <td><a href="javascript:verifSuppression('{{gp.getGroupe()}}')"><img src="images/delete.jpeg" alt="Supprimer le groupe"/></a></td>
        <!-- Ajouter bouton pour modifier la row (update)-->

    </tr>
    {% endfor %}
</table>
{% endblock %}